meta {
  name: Create label
  type: http
  seq: 1
}

post {
  url: {{host}}/api/{{api_version}}/fleet/labels
  body: json
}

headers {
  Authorization: Bearer {{token}}
}

body:json {
  {
    "name": "Ubuntu hosts",
    "description": "Filters ubuntu hosts",
    "query": "SELECT 1 FROM os_version WHERE platform = 'ubuntu';",
    "platform": ""
  }
}

vars:post-response {
  label_id: res("label.id")
}

assert {
  res.status: 200
}
