meta {
  name: Modify label
  type: http
  seq: 2
}

patch {
  url: {{host}}/api/{{api_version}}/fleet/labels/{{label_id}}
  body: json
}

headers {
  Authorization: Bearer {{token}}
}

body:json {
  {
    "name": "macOS label",
    "description": "Now this label only includes macOS machines",
    "platform": "darwin"
  }
}

vars:post-response {
  label_name: res("label.name")
}
