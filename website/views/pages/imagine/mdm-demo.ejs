<div id="mdm-demo" v-cloak>

  <div class="container-fluid">
    <div class="mx-auto" style="max-width: 800px;">
      <div class="pt-5" v-if="demoStage === 0">
        <div class="container">
          <h1>MDM demo</h1>
          <div class="mx-auto d-flex flex-row justify-content-center align-items-center" purpose="mdm-demo-container">

            <div purpose="button-row">
              <a purpose="cta-button" @click="clickStartGame()">Click here to start</a>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-5" v-if="demoStage === 1">
        <h1>How MDM traditionally works...</h1>
        <div id="dragContainer" class="mx-auto"  purpose="mdm-demo-container">
          <div class="d-flex flex-row justify-content-around">
            <div class="d-flex flex-column justify-content-between h-100">
              <div><img id="fileOne" draggable="true" src="/images/mdm-demo-file-1.png"></div>
              <div><img id="fileTwo" draggable="true" src="/images/mdm-demo-file-2.png"></div>
              <div><img id="fileThree" draggable="true" src="/images/mdm-demo-file-3.png"></div>
            </div>
            <div purpose="timer">
              <div class="flex-column align-items-center" v-if="timeLeft > 9"><h4>00:{{timeLeft}}</h4></div>
              <div class="flex-column align-items-center" v-else-if="timeLeft > 0"><h4>00:0{{timeLeft}}</h4></div>
              <div class="flex-column align-items-center" v-if="timeLeft === 0"><h4>Times up!</h4></div>
            </div>
            <div class="d-flex flex-column justify-content-between h-100">
              <div id="hostOne" class="d-flex flex-row align-items-center"><img class="mr-2" src="/images/demo-host.png"> <div purpose="counter">{{counter.hostOne}}</div></div>
              <div id="hostTwo" class="d-flex flex-row align-items-center"><img class="mr-2" src="/images/demo-host.png">
                <div purpose="counter">{{counter.hostTwo}}</div>
              </div>
              <div id="hostThree" class="d-flex flex-row align-items-center"><img class="mr-2" src="/images/demo-host.png">
                <div purpose="counter">{{counter.hostThree}}</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-5" v-if="demoStage === 2">
        <h1>How MDM traditionally works...</h1>
        <div class="mx-auto" purpose="mdm-demo-container">
          <div class="d-flex flex-column align-items-center h-100 justify-content-center">
            <h1>Results:</h1>
            <p>
              <img class="d-inline mr-2" style="height: 24px; width: auto" src="/images/os-linux-black-32x36@2x.png" alt="Linux logo">
              {{counter.hostOne}} profiles configured
            </p>
            <p>
              <img class="d-inline mr-2" style="height: 24px; width: auto" src="/images/os-windows-black-38x36@2x.png" alt="Windows logo">
              {{counter.hostTwo}} profiles configured
            </p>
            <p>
              <img class="d-inline mr-2" style="height: 25px; width: auto" src="/images/os-macos-black-31x35@2x.png" alt="macOS logo">
              {{counter.hostThree}} profiles configured
            </p>
            <div purpose="button-row">
              <a class="mx-auto" style="max-width: 450px;" purpose="cta-button" @click="clickStartStageTwo()">See how GitOps can improve your workflow</a>
            </div>
          </div>
        </div>
      </div>

    <div class="pt-5" v-if="demoStage === 3">
      <h1>How the future of MDM works...</h1>
      <div id="dragContainer" class="mx-auto"  purpose="mdm-demo-container">
        <div class="d-flex h-100 flex-row justify-content-end">
          <div class="d-flex flex-column justify-content-between h-100">
            <div><img id="fileOne" draggable="true" src="/images/mdm-demo-file-1.png"></div>
            <div><img id="fileTwo" draggable="true" src="/images/mdm-demo-file-2.png"></div>
            <div><img id="fileThree" draggable="true" src="/images/mdm-demo-file-3.png"></div>
          </div>
          <div class="d-flex flex-column justify-content-between h-100">
            <div purpose="timer">
              <div class="flex-column align-items-center" v-if="timeLeft > 9"><h4>00:{{timeLeft}}</h4></div>
              <div class="flex-column align-items-center" v-else-if="timeLeft > 0"><h4>00:0{{timeLeft}}</h4></div>
              <div class="flex-column align-items-center" v-if="timeLeft === 0"><h4>Times up!</h4></div>
            </div>
            <div id="gitops">
              <img src="/images/fleet-ball.png">
              <div purpose="deploying-message" class="d-flex flex-row justify-content-center align-items-center" v-if="showDeployingMsg"> <p class="mb-0">Deploying changes....</p></div>
              </div>
            <div id="arrowOne"><img src="/images/mdm-demo-arrow-1.png"></div>
            <div id="arrowTwo"><img src="/images/mdm-demo-arrow-2.png"></div>
            <div id="arrowThree"><img src="/images/mdm-demo-arrow-3.png"></div>
          </div>
          <div class="justify-self-end h-100">
            <div id="stageTwoHosts" class=""><img style="height: 500px;" src="/images/mdm-demo-hosts.png"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  <div purpose="bottom-gradient" class="pt-5 mt-5">
    <div purpose="page-container" class="pb-0 container">

